<!DOCTYPE html>
<html lang="de" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - KosmaMedia</title>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@5.0.50/dist/full.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="/css/main.css" rel="stylesheet">
    <link href="/css/landing.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="bg-white shadow-sm border-b border-gray-200 px-6 py-4">
        <div class="max-w-7xl mx-auto flex items-center justify-between">
            <!-- Logo -->
            <div class="flex items-center space-x-3">
                <div class="logo-icon">
                    <div class="logo-icon-inner"></div>
                </div>
                <span class="text-xl font-bold text-gray-900">KosmaMedia</span>
            </div>
            
            <!-- CTA Buttons -->
            <div class="flex items-center gap-4">
                <a href="/" class="text-gray-600 hover:text-gray-900 px-3 py-2 text-sm font-medium transition-colors">Zurück zur Startseite</a>
                <a href="/" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors font-medium">Pricing ansehen</a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="min-h-screen flex items-center justify-center py-12 px-6">
        <div class="max-w-md mx-auto">
            <div class="bg-white rounded-xl shadow-lg p-8">
                <div class="text-center mb-6">
                    <h3 class="text-2xl font-bold mb-2">Anmelden</h3>
                    <p class="text-gray-600">Melden Sie sich mit Ihren Zugangsdaten an</p>
                </div>
                
                <!-- Fehler- und Erfolgsmeldungen -->
                <% if (error) { %>
                    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-4 flex items-start space-x-3">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-red-400 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                        <span><%= error %></span>
                    </div>
                    
                    <!-- Spezielle Aktionen basierend auf Fehlertyp -->
                    <% if (error.includes('existiert noch nicht')) { %>
                        <div class="bg-blue-50 border border-blue-200 text-blue-700 px-4 py-3 rounded-lg mb-4 flex items-start space-x-3">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-blue-400 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                            <span>
                                <strong>Neu bei KosmaMedia?</strong> 
                                <a href="/auth/register" class="font-bold text-blue-600 hover:text-blue-700 ml-2">
                                    Jetzt Konto erstellen →
                                </a>
                            </span>
                        </div>
                    <% } %>
                    
                    <% if (error.includes('E-Mail bestätigen')) { %>
                        <div class="bg-yellow-50 border border-yellow-200 text-yellow-700 px-4 py-3 rounded-lg mb-4 flex items-start space-x-3">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-yellow-400 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.34 16.5c-.77.833.192 2.5 1.732 2.5z" /></svg>
                            <span>
                                <strong>E-Mail nicht bestätigt?</strong> 
                                <a href="/auth/resend-confirmation" class="font-bold text-blue-600 hover:text-blue-700 ml-2">
                                    Bestätigungs-E-Mail erneut senden →
                                </a>
                            </span>
                        </div>
                    <% } %>
                <% } %>
                
                <% if (success && success.includes('E-Mail erfolgreich bestätigt')) { %>
                    <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-lg mb-4 flex items-start space-x-3" id="success-alert">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-green-400 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                        <span><%= success %></span>
                    </div>
                <% } %>
                
                <% if (success && !success.includes('E-Mail erfolgreich bestätigt')) { %>
                    <div class="bg-blue-50 border border-blue-200 text-blue-700 px-4 py-3 rounded-lg mb-4 flex items-start space-x-3">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-blue-400 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                        <span><%= success %></span>
                    </div>
                <% } %>
                
                <!-- Login-Formular -->
                <form action="/auth/login" method="POST" class="space-y-4">
                    <div class="space-y-2">
                        <label class="block text-sm font-medium text-gray-700">
                            E-Mail-Adresse
                        </label>
                        <input 
                            type="email" 
                            name="email" 
                            placeholder="ihre@email.com" 
                            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                            required
                        />
                    </div>
                    
                    <div class="space-y-2">
                        <label class="block text-sm font-medium text-gray-700">
                            Passwort
                        </label>
                        <input 
                            type="password" 
                            name="password" 
                            placeholder="Ihr Passwort" 
                            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                            required
                        />
                    </div>
                    
                    <div class="flex items-center justify-between">
                        <label class="flex items-center space-x-2">
                            <input type="checkbox" name="remember" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 focus:ring-2" />
                            <span class="text-sm text-gray-600">Angemeldet bleiben</span>
                        </label>
                        <a href="/auth/forgot-password" class="text-sm text-blue-600 hover:text-blue-700">
                            Passwort vergessen?
                        </a>
                    </div>
                    
                    <button type="submit" class="w-full bg-blue-600 text-white py-3 px-4 rounded-lg hover:bg-blue-700 transition-colors font-medium">
                        Anmelden
                    </button>
                </form>
                
                <div class="relative my-6">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-300"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-2 bg-white text-gray-500">oder</span>
                    </div>
                </div>
                
                <div class="text-center">
                    <p class="text-gray-600 text-sm mb-4">
                        Noch kein Konto?
                    </p>
                    <a href="/auth/register" class="w-full inline-block bg-white text-blue-600 py-3 px-4 rounded-lg hover:bg-gray-50 transition-colors font-medium border-2 border-blue-600">
                        Konto erstellen
                    </a>
                </div>
                
                <div class="text-center mt-6">
                    <p class="text-gray-600 text-sm">
                        <a href="/" class="text-blue-600 hover:text-blue-700 font-medium">Zurück zur Startseite</a>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Auto-hide success alert nach 4 Sekunden
        document.addEventListener('DOMContentLoaded', function() {
            const successAlert = document.getElementById('success-alert');
            if (successAlert) {
                // Fade-out Animation nach 4 Sekunden
                setTimeout(() => {
                    successAlert.style.transition = 'opacity 0.5s ease-out';
                    successAlert.style.opacity = '0';
                    
                    // Element nach Animation entfernen
                    setTimeout(() => {
                        successAlert.remove();
                        // URL ohne success-Parameter aktualisieren
                        const url = new URL(window.location);
                        url.searchParams.delete('success');
                        window.history.replaceState({}, '', url);
                    }, 500);
                }, 4000);
            }
        });
    </script>
    

</body>
</html>
