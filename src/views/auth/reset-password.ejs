<!DOCTYPE html>
<html lang="de" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Passwort zur√ºcksetzen - KosmaMedia</title>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@5.0.50/dist/full.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="/css/main.css" rel="stylesheet">
</head>
<body class="bg-gray-50">
    <!-- Navigation Bar -->
    <nav class="bg-white shadow-sm border-b">
        <div class="max-w-7xl mx-auto px-6 py-4">
            <div class="flex items-center justify-between">
                <!-- Logo -->
                <div class="flex items-center space-x-3">
                    <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center">
                        <div class="w-4 h-4 bg-white rounded"></div>
                    </div>
                    <span class="text-xl font-bold text-gray-900">KosmaMedia</span>
                </div>
                
                <!-- CTA Buttons -->
                <div class="flex items-center gap-4">
                    <a href="/" class="text-blue-600 hover:text-blue-700 font-medium">Zur√ºck zur Startseite</a>
                    <a href="/auth/login" class="btn btn-outline btn-sm">Zur√ºck zum Login</a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="min-h-screen flex items-center justify-center py-12 px-6">
        <div class="w-full max-w-md">
            <div class="bg-white rounded-lg shadow-lg p-8">
                <div class="text-center mb-6">
                    <h3 class="text-2xl font-bold mb-2 text-gray-900">Neues Passwort setzen</h3>
                    <% if (email) { %>
                        <p class="text-gray-600">Passwort f√ºr <strong><%= email %></strong> zur√ºcksetzen</p>
                        <p class="text-sm text-green-600 mt-2">‚úÖ Sie sind erfolgreich eingeloggt</p>
                    <% } else { %>
                        <p class="text-gray-600">Geben Sie Ihr neues Passwort ein</p>
                    <% } %>
                </div>
                
                <!-- Fehler- und Erfolgsmeldungen -->
                <% if (error) { %>
                    <div class="alert alert-error mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                        <span><%= error %></span>
                    </div>
                <% } %>
                
                <% if (success) { %>
                    <div class="alert alert-success mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                        <span><%= success %></span>
                    </div>
                <% } %>
                
                <!-- Hash-Fragment-Extractor (wenn keine Session vorhanden) -->
                <% if (showHashExtractor) { %>
                    <div class="alert alert-info mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                        <span>üîç Analysiere E-Mail-Link...</span>
                    </div>
                    
                    <div id="hashExtractor" class="space-y-4">
                        <div class="text-center">
                            <div class="loading loading-spinner loading-lg text-blue-600"></div>
                            <p class="text-sm text-gray-600 mt-2">Lade Authentifizierungsdaten...</p>
                        </div>
                    </div>
                <% } %>
                
                <!-- Passwort-Reset-Formular (wenn Session vorhanden) -->
                <% if (email) { %>
                    <form action="/auth/reset-password" method="POST" class="space-y-4">
                        <!-- Versteckte Felder f√ºr Auth-Tokens -->
                        <% if (access_token) { %>
                            <input type="hidden" name="access_token" value="<%= access_token %>" />
                        <% } %>
                        <% if (refresh_token) { %>
                            <input type="hidden" name="refresh_token" value="<%= refresh_token %>" />
                        <% } %>
                        
                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-medium text-gray-700">Neues Passwort</span>
                            </label>
                            <input 
                                type="password" 
                                name="password" 
                                placeholder="Mindestens 6 Zeichen" 
                                class="input input-bordered w-full"
                                minlength="6"
                                required
                            />
                            <p class="text-sm text-gray-500 mt-1">Das Passwort muss mindestens 6 Zeichen lang sein</p>
                        </div>
                        
                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-medium text-gray-700">Passwort best√§tigen</span>
                            </label>
                            <input 
                                type="password" 
                                name="confirmPassword" 
                                placeholder="Passwort wiederholen" 
                                class="input input-bordered w-full"
                                minlength="6"
                                required
                            />
                        </div>
                        
                        <button type="submit" class="btn btn-primary w-full">
                            Passwort √§ndern
                        </button>
                    </form>
                <% } else { %>
                    <div class="text-center py-8">
                        <div class="text-red-500 mb-4">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-16 h-16 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z" />
                            </svg>
                        </div>
                        <p class="text-gray-600 mb-4">Der Passwort-Reset-Link ist ung√ºltig oder abgelaufen.</p>
                        <a href="/auth/forgot-password" class="btn btn-primary">
                            Neuen Link anfordern
                        </a>
                    </div>
                <% } %>
                
                <div class="divider">oder</div>
                
                <div class="text-center">
                    <p class="text-gray-600 mb-2">Passwort wieder eingefallen?</p>
                    <a href="/auth/login" class="btn btn-outline btn-sm w-full">
                        Zur√ºck zum Login
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript f√ºr Hash-Fragment-Extraktion und Passwort-Best√§tigung -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Hash-Fragment-Extraktor f√ºr Password Recovery
            const hashExtractor = document.getElementById('hashExtractor');
            if (hashExtractor) {
                console.log('üîç Hash-Extraktor aktiviert...');
                
                // Extrahiere Hash-Fragment aus der URL
                const hash = window.location.hash;
                console.log('üîç Hash gefunden:', hash);
                
                if (hash && hash !== '') {
                    const query = new URLSearchParams(hash.substring(1));
                    const isRecovery = query.get('type') === 'recovery';
                    const accessToken = query.get('access_token');
                    const refreshToken = query.get('refresh_token');
                    
                    console.log('üîç Hash-Parameter:', {
                        isRecovery,
                        accessToken: accessToken ? 'PRESENT' : 'MISSING',
                        refreshToken: refreshToken ? 'PRESENT' : 'MISSING'
                    });
                    
                    if (isRecovery && accessToken) {
                        // Zeige Erfolg und leite zur Passwort-√Ñnderung weiter
                        hashExtractor.innerHTML = `
                            <div class="alert alert-success mb-4">
                                <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                                <span>‚úÖ Recovery-Link erfolgreich erkannt!</span>
                            </div>
                            <div class="text-center">
                                <p class="text-gray-600 mb-4">Sie werden automatisch zur Passwort-√Ñnderung weitergeleitet...</p>
                                <div class="loading loading-spinner loading-md text-blue-600"></div>
                            </div>
                        `;
                        
                        // Leite zur Passwort-√Ñnderung weiter (mit Tokens)
                        setTimeout(() => {
                            window.location.href = `/auth/reset-password?access_token=${accessToken}&refresh_token=${refreshToken || ''}&type=recovery`;
                        }, 2000);
                    } else {
                        // Kein g√ºltiger Recovery-Link
                        hashExtractor.innerHTML = `
                            <div class="alert alert-error mb-4">
                                <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                                <span>‚ùå Ung√ºltiger Recovery-Link</span>
                            </div>
                            <div class="text-center">
                                <p class="text-gray-600 mb-4">Der Link ist ung√ºltig oder abgelaufen.</p>
                                <a href="/auth/forgot-password" class="btn btn-primary">
                                    Neuen Link anfordern
                                </a>
                            </div>
                        `;
                    }
                } else {
                    // Kein Hash gefunden
                    hashExtractor.innerHTML = `
                        <div class="alert alert-warning mb-4">
                            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z" /></svg>
                            <span>‚ö†Ô∏è Kein Recovery-Link gefunden</span>
                        </div>
                        <div class="text-center">
                            <p class="text-gray-600 mb-4">Bitte verwenden Sie den Link aus der E-Mail.</p>
                            <a href="/auth/forgot-password" class="btn btn-primary">
                                Neuen Link anfordern
                            </a>
                        </div>
                    `;
                }
            }
            
            // Passwort-Best√§tigung
            const form = document.querySelector('form');
            if (form) {
                const password = document.querySelector('input[name="password"]');
                const confirmPassword = document.querySelector('input[name="confirmPassword"]');
                
                form.addEventListener('submit', function(e) {
                    if (password.value !== confirmPassword.value) {
                        e.preventDefault();
                        alert('Die Passw√∂rter stimmen nicht √ºberein!');
                        return false;
                    }
                    
                    if (password.value.length < 6) {
                        e.preventDefault();
                        alert('Das Passwort muss mindestens 6 Zeichen lang sein!');
                        return false;
                    }
                });
            }
        });
    </script>
</body>
</html>
