<!DOCTYPE html>
<html lang="de" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#3B82F6',
                        secondary: '#10B981',
                        accent: '#F59E0B'
                    }
                }
            }
        }
    </script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <div class="navbar bg-base-100 shadow-lg">
        <div class="navbar-start">
            <div class="dropdown">
                <div tabindex="0" role="button" class="btn btn-ghost lg:hidden">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16" />
                    </svg>
                </div>
                <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
                    <li><a href="#home">Start</a></li>
                    <li><a href="#features">Features</a></li>
                    <li><a href="#about">Über uns</a></li>
                </ul>
            </div>
            <a class="btn btn-ghost text-xl">
                <i class="fas fa-rocket text-primary mr-2"></i>
                KosmaMedia
            </a>
        </div>
        <div class="navbar-center hidden lg:flex">
            <ul class="menu menu-horizontal px-1">
                <li><a href="#home">Start</a></li>
                <li><a href="#features">Features</a></li>
                <li><a href="#about">Über uns</a></li>
            </ul>
        </div>
        <div class="navbar-end">
            <label class="swap swap-rotate">
                <input type="checkbox" class="theme-controller" value="dark" />
                <svg class="swap-on fill-current w-6 h-6" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <path d="M5.64,17l-.71.71a1,1,0,0,0,0,1.41,1,1,0,0,0,1.41,0l.71-.71A1,1,0,0,0,5.64,17ZM5,12a1,1,0,0,0,0,2H7a1,1,0,0,0,0-2Zm0-8a1,1,0,0,0,0,2H7a1,1,0,0,0,0-2ZM12,2a1,1,0,0,0-1,1V7a1,1,0,0,0,2,0V3A1,1,0,0,0,12,2ZM12,15a1,1,0,0,0-1,1v4a1,1,0,0,0,2,0V16A1,1,0,0,0,12,15ZM18.36,17A1,1,0,0,0,17,18.36l.71.71a1,1,0,0,0,1.41,0,1,1,0,0,0,0-1.41ZM19,12a1,1,0,0,0,0-2H17a1,1,0,0,0,0,2ZM19,4a1,1,0,0,0,0-2H17a1,1,0,0,0,0,2ZM12,9a1,1,0,0,0-1,1v4a1,1,0,0,0,2,0V10A1,1,0,0,0,12,9Z"/>
                </svg>
                <svg class="swap-off fill-current w-6 h-6" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <path d="M21.64,13a1,1,0,0,0-1.05-.14,8.05,8.05,0,0,1-3.37.73A8.15,8.15,0,0,1,9.08,5.49a8.59,8.59,0,0,1,.25-2A1,1,0,0,0,8,2.36,10.14,10.14,0,1,0,22,14.05,1,1,0,0,0,21.64,13Zm-9.5,6.69A8.14,8.14,0,0,1,7.08,5.22v.27A10.15,10.15,0,0,0,17.22,15.63a9.79,9.79,0,0,0,2.1-.22A8.11,8.11,0,0,1,12.14,19.73Z"/>
                </svg>
            </label>
        </div>
    </div>

    <!-- Hero Section -->
    <div class="hero min-h-screen bg-gradient-to-br from-primary/10 to-secondary/10">
        <div class="hero-content text-center">
            <div class="max-w-md">
                <h1 class="text-5xl font-bold text-primary">
                    <i class="fas fa-rocket mr-4"></i>
                    Willkommen!
                </h1>
                <p class="py-6 text-lg">
                    <%= message %>
                </p>
                <button class="btn btn-primary">
                    <i class="fas fa-play mr-2"></i>
                    Los geht's!
                </button>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <section id="features" class="py-16 bg-base-100">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold text-center mb-12">Unsere Features</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <!-- Feature 1 -->
                <div class="card text-center">
                    <div class="text-4xl text-primary mb-4">
                        <i class="fas fa-bolt"></i>
                    </div>
                    <h3 class="text-xl font-semibold mb-2">Schnell</h3>
                    <p class="text-gray-600 dark:text-gray-400">
                        Optimiert für beste Performance und Benutzerfreundlichkeit.
                    </p>
                </div>
                
                <!-- Feature 2 -->
                <div class="card text-center">
                    <div class="text-4xl text-secondary mb-4">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h3 class="text-xl font-semibold mb-2">Sicher</h3>
                    <p class="text-gray-600 dark:text-gray-400">
                        Moderne Sicherheitsstandards für deine Daten.
                    </p>
                </div>
                
                <!-- Feature 3 -->
                <div class="card text-center">
                    <div class="text-4xl text-accent mb-4">
                        <i class="fas fa-mobile-alt"></i>
                    </div>
                    <h3 class="text-xl font-semibold mb-2">Responsiv</h3>
                    <p class="text-gray-600 dark:text-gray-400">
                        Funktioniert perfekt auf allen Geräten.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section id="about" class="py-16 bg-base-200">
        <div class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto text-center">
                <h2 class="text-3xl font-bold mb-8">Über unser Projekt</h2>
                <p class="text-lg text-gray-600 dark:text-gray-400 mb-6">
                    Dies ist eine moderne Webanwendung, die mit Node.js, Express.js, Tailwind CSS und DaisyUI gebaut wurde.
                    Sie ist darauf ausgelegt, skalierbar zu sein und kann später einfach auf Vercel gehostet werden.
                </p>
                <div class="stats shadow">
                    <div class="stat">
                        <div class="stat-figure text-primary">
                            <i class="fas fa-code text-3xl"></i>
                        </div>
                        <div class="stat-title">Technologien</div>
                        <div class="stat-value text-primary">4+</div>
                        <div class="stat-desc">Node.js, Express, Tailwind, DaisyUI</div>
                    </div>
                    
                    <div class="stat">
                        <div class="stat-figure text-secondary">
                            <i class="fas fa-rocket text-3xl"></i>
                        </div>
                        <div class="stat-title">Performance</div>
                        <div class="stat-value text-secondary">100%</div>
                        <div class="stat-desc">Optimiert für Geschwindigkeit</div>
                    </div>
                    
                    <div class="stat">
                        <div class="stat-figure text-accent">
                            <i class="fas fa-mobile-alt text-3xl"></i>
                        </div>
                        <div class="stat-title">Responsiv</div>
                        <div class="stat-value text-accent">✓</div>
                        <div class="stat-desc">Alle Geräte unterstützt</div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer footer-center p-10 bg-base-300 text-base-content">
        <div>
            <i class="fas fa-rocket text-primary text-2xl mb-2"></i>
            <p class="font-bold">
                KosmaMedia Product 1 <br/>
                Moderne Webentwicklung
            </p> 
            <p>Copyright © 2025 - Alle Rechte vorbehalten</p>
        </div> 
        <div>
            <div class="grid grid-flow-col gap-4">
                <a href="#" class="link link-hover">
                    <i class="fab fa-github text-xl"></i>
                </a>
                <a href="#" class="link link-hover">
                    <i class="fab fa-twitter text-xl"></i>
                </a>
                <a href="#" class="link link-hover">
                    <i class="fab fa-linkedin text-xl"></i>
                </a>
            </div>
        </div>
    </footer>

    <!-- JavaScript -->
    <script>
        // Theme Switcher
        const themeController = document.querySelector('.theme-controller');
        
        // Theme aus localStorage laden
        const currentTheme = localStorage.getItem('theme') || 'light';
        document.documentElement.setAttribute('data-theme', currentTheme);
        themeController.checked = currentTheme === 'dark';
        
        // Theme wechseln
        themeController.addEventListener('change', (e) => {
            const theme = e.target.checked ? 'dark' : 'light';
            document.documentElement.setAttribute('data-theme', theme);
            localStorage.setItem('theme', theme);
        });
        
        // Smooth Scrolling für Navigation
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
</body>
</html>
